<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.office.future.futureoffice.Office"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="58dp"
        android:layout_gravity="top"
        android:alpha="0.6"
        android:background="#000000"
        android:orientation="vertical"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="16dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal">

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageView6"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_work_black_48dp"
                android:tint="#ffffff" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical"
                android:autoText="true"
                android:gravity="center"
                android:text="Office"
                android:textColor="#ffffff"
                android:textSize="35dp"
                android:layout_marginLeft="8dp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context="com.office.future.futureoffice.Home"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:alpha="0.6"
            android:background="#000000"
            android:baselineAligned="false"
            android:fitsSystemWindows="true"
            android:orientation="vertical"
            android:weightSum="1">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoText="true"
                android:gravity="center"
                android:text="Estimated Time:"
                android:textColor="#ffffff"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/estimatedTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoText="false"
                android:gravity="center_horizontal"
                android:text="New Text"
                android:textColor="#ffffff"
                android:textSize="30sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoText="true"
                android:gravity="center"
                android:text="Distance:"
                android:textColor="#ffffff"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/distance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:gravity="center_horizontal"
                android:text="New Text"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoText="true"
                android:gravity="center"
                android:text="Office temperature:"
                android:textColor="#ffffff"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/temperatureText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:gravity="center_horizontal"
                android:text="23.4ÂºC"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal" />

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:autoText="true"
                android:gravity="center"
                android:text="Luminosity:"
                android:textColor="#ffffff"
                android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium" />

            <TextView
                android:id="@+id/luminosityText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:autoText="true"
                android:gravity="center_horizontal"
                android:text="137"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:layout_gravity="center_horizontal" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal">

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:gravity="center"
                    android:text="Switch AC:"
                    android:textColor="#ffffff"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:layout_margin="8dp" />

                <Switch
                    android:layout_width="fill_parent"
                    android:layout_height="match_parent"
                    android:text="Turn AC"
                    android:id="@+id/acSwitch"
                    android:background="#000000"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:autoText="false"
                    android:gravity="center"
                    android:text="Blinds"
                    android:textColor="#ffffff"
                    android:textAppearance="@android:style/TextAppearance.Medium"
                    android:layout_margin="8dp" />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="New Switch"
                    android:id="@+id/blindsSwitch"
                    android:textOn="Open"
                    android:textOff="Closed" />

            </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Send Email"
                android:id="@+id/sendEmail"
                android:focusableInTouchMode="false"
                android:layout_margin="8dp" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="57dp"
                android:text="Go to Map"
                android:id="@+id/goMap"
                android:focusableInTouchMode="false"
                android:layout_margin="8dp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>
